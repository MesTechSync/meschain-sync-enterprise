// API endpoints for product management
app.get('/api/products', (req, res) => {
    res.json({
        status: 'success',
        total_products: 2847,
        categories: 156,
        marketplaces: 8,
        sync_rate: 94.2,
        products: [
            { id: 1, name: 'Smartphone X1', category: 'Electronics', price: 999.99, stock: 45 },
            { id: 2, name: 'Laptop Pro 15', category: 'Computers', price: 1299.99, stock: 23 },
            { id: 3, name: 'Wireless Headphones', category: 'Audio', price: 199.99, stock: 67 }
        ]
    });
});

app.get('/api/categories', (req, res) => {
    res.json({
        status: 'success',
        categories: [
            { id: 1, name: 'Electronics', product_count: 845 },
            { id: 2, name: 'Clothing', product_count: 567 },
            { id: 3, name: 'Home & Garden', product_count: 423 },
            { id: 4, name: 'Sports', product_count: 289 }
        ]
    });
});

// Health check endpoint
app.get('/health', (req, res) => {
    res.json({
        service: 'Product Management Suite',
        port: PORT,
        status: 'healthy',
        timestamp: new Date().toISOString(),
        authentication: 'pending_integration'
    });
});

// Start server
app.listen(PORT, () => {
    console.log('üöÄ Product Management Suite Server Started');
    console.log(`üìç URL: http://localhost:${PORT}`);
    console.log(`üì¶ Service: Multi-Marketplace Product Management`);
    console.log(`üîê Status: Ready for Priority 3 authentication integration`);
    console.log('‚îÅ'.repeat(60));
});

// Graceful shutdown
process.on('SIGINT', () => {
    console.log('\\nüõë Product Management Suite shutting down...');
    process.exit(0);
});
