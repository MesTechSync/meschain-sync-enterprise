/**
 * Port 3005 - Product Management Suite Server
 * MesChain-Sync Enterprise Product Management Center
 * 
 * Features:
 * - Multi-marketplace product management
 * - Bulk product operations
 * - Inventory synchronization
 * - Product analytics
 * - Category management
 */

const express = require('express');
const path = require('path');
const cors = require('cors');
const fs = require('fs');

const app = express();
const PORT = 3005;

// Middleware
app.use(cors({
    origin: ['http://localhost:3000', 'http://localhost:3001', 'http://localhost:3002', 'http://localhost:8080'],
    credentials: true
}));
app.use(express.json());
app.use(express.static(path.join(__dirname, 'CursorDev')));

// Authentication middleware
app.use((req, res, next) => {
    // For now, allow all requests - will integrate authentication later
    req.user = { role: 'marketplace_manager', id: 1, username: 'product_manager' };
    next();
});

// Serve the main product management dashboard
