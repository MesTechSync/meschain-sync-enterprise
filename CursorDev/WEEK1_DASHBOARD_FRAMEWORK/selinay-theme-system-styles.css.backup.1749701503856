}

/* ===== DARK THEME SPECIFIC ENHANCEMENTS ===== */
[data-theme="dark"] .selinay-card {
  background: linear-gradient(145deg, var(--selinay-card-bg), rgba(255, 255, 255, 0.02));
  border-color: rgba(255, 255, 255, 0.1);
}

[data-theme="dark"] .selinay-card:hover {
  background: linear-gradient(145deg, var(--selinay-card-bg), rgba(255, 255, 255, 0.05));
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

[data-theme="dark"] .selinay-modal-overlay {
  background: rgba(0, 0, 0, 0.7);
}

[data-theme="dark"] .selinay-input {
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.1);
}

[data-theme="dark"] .selinay-input:focus {
  background: rgba(255, 255, 255, 0.08);
}

/* ===== LIGHT THEME SPECIFIC ENHANCEMENTS ===== */
[data-theme="light"] .selinay-card {
  background: linear-gradient(145deg, var(--selinay-card-bg), rgba(0, 0, 0, 0.01));
}

[data-theme="light"] .selinay-card:hover {
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

[data-theme="light"] .selinay-modal-overlay {
  background: rgba(0, 0, 0, 0.4);
}

