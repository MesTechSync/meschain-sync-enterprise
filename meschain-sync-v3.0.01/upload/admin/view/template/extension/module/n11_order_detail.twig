{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ back }}" data-toggle="tooltip" title="{{ button_back }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
        {% if convert %}
        <a href="{{ convert }}" data-toggle="tooltip" title="{{ text_convert }}" class="btn btn-primary"><i class="fa fa-exchange"></i> {{ text_convert }}</a>
        {% endif %}
        {% if opencart_order %}
        <a href="{{ opencart_order }}" data-toggle="tooltip" title="{{ text_opencart_order }}" class="btn btn-info"><i class="fa fa-shopping-cart"></i> {{ text_opencart_order }}</a>
        {% endif %}
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-shopping-cart"></i> {{ text_order_detail }}</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered">
              <tr>
                <td style="width: 50%;"><strong>{{ text_order_number }}</strong></td>
                <td style="width: 50%;">{{ order.order_number }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_n11_order_id }}</strong></td>
                <td>{{ order.n11_order_id }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_status }}</strong></td>
                <td><span class="label label-{{ order.status.color }}">{{ order.status.name }}</span></td>
              </tr>
              <tr>
                <td><strong>{{ text_date_added }}</strong></td>
                <td>{{ order.date_added }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_date_modified }}</strong></td>
                <td>{{ order.date_modified }}</td>
              </tr>
              {% if order.opencart_order_id %}
              <tr>
                <td><strong>{{ text_opencart_order_id }}</strong></td>
                <td><a href="{{ opencart_order }}" target="_blank">{{ order.opencart_order_id }}</a></td>
              </tr>
              {% endif %}
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-credit-card"></i> {{ text_payment }}</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered">
              <tr>
                <td style="width: 50%;"><strong>{{ text_total }}</strong></td>
                <td style="width: 50%;">{{ order.total }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_shipping_cost }}</strong></td>
                <td>{{ order.shipping_cost }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_commission }}</strong></td>
                <td>{{ order.commission }}</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-user"></i> {{ text_customer_info }}</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered">
              <tr>
                <td style="width: 50%;"><strong>{{ text_customer_name }}</strong></td>
                <td style="width: 50%;">{{ customer.name }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_customer_email }}</strong></td>
                <td>{{ customer.email }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_customer_phone }}</strong></td>
                <td>{{ customer.phone }}</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-truck"></i> {{ text_shipping_address }}</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered">
              <tr>
                <td style="width: 50%;"><strong>{{ text_address }}</strong></td>
                <td style="width: 50%;">{{ shipping_address.address }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_city }}</strong></td>
                <td>{{ shipping_address.city }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_district }}</strong></td>
                <td>{{ shipping_address.district }}</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-file-text-o"></i> {{ text_billing_address }}</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered">
              <tr>
                <td style="width: 50%;"><strong>{{ text_address }}</strong></td>
                <td style="width: 50%;">{{ billing_address.address }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_city }}</strong></td>
                <td>{{ billing_address.city }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_district }}</strong></td>
                <td>{{ billing_address.district }}</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-cubes"></i> {{ text_products }}</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <td class="text-center">{{ text_product_name }}</td>
                <td class="text-center">{{ text_seller_code }}</td>
                <td class="text-right">{{ text_quantity }}</td>
                <td class="text-right">{{ text_price }}</td>
                <td class="text-right">{{ text_total }}</td>
              </tr>
            </thead>
            <tbody>
              {% for product in products %}
              <tr>
                <td class="text-center">{{ product.name }}</td>
                <td class="text-center">{{ product.seller_code }}</td>
                <td class="text-right">{{ product.quantity }}</td>
                <td class="text-right">{{ product.price }}</td>
                <td class="text-right">{{ product.total }}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }} 