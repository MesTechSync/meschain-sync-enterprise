{
    "name": "MesChain Trendyol Integration",
    "version": "1.0.0",
    "description": "Complete Trendyol marketplace integration for OpenCart with automated product sync, order management, and real-time monitoring",
    "author": "MesChain Development Team",
    "email": "support@meschain.com",
    "website": "https://meschain.com",
    "license": "Commercial",
    "opencart_version": "4.0.0.0",
    "php_version": "8.0.0",
    "mysql_version": "5.7.0",
    "date": "2025-06-21",
    "keywords": [
        "opencart",
        "trendyol",
        "marketplace",
        "integration",
        "e-commerce",
        "sync",
        "automation"
    ],
    "features": [
        "Complete Trendyol API integration",
        "Automated product synchronization",
        "Real-time order management",
        "Inventory sync and updates",
        "E-invoice generation",
        "Barcode creation and management",
        "Webhook processing",
        "Performance monitoring",
        "Comprehensive logging",
        "Security audit tools",
        "Load testing capabilities",
        "Automated deployment"
    ],
    "requirements": {
        "opencart": ">=4.0.0",
        "php": ">=8.0.0",
        "mysql": ">=5.7.0",
        "extensions": [
            "curl",
            "json",
            "gd",
            "mbstring",
            "openssl"
        ]
    },
    "files": {
        "admin": "Admin panel integration files",
        "catalog": "Frontend catalog integration",
        "system": "Core system libraries",
        "install": "Database installation scripts",
        "scripts": "Utility and cron scripts",
        "docs": "Documentation and guides"
    },
    "database_tables": [
        "oc_trendyol_products",
        "oc_trendyol_orders",
        "oc_trendyol_categories",
        "oc_trendyol_logs",
        "oc_trendyol_sync_queue",
        "oc_trendyol_webhooks"
    ],
    "cron_jobs": [
        "meschain_trendyol_product_sync",
        "meschain_trendyol_order_sync",
        "meschain_trendyol_stock_update",
        "meschain_trendyol_cleanup"
    ],
    "api_endpoints": [
        "/api/meschain/trendyol/products",
        "/api/meschain/trendyol/orders",
        "/api/meschain/trendyol/webhook",
        "/api/meschain/trendyol/health"
    ],
    "permissions": [
        "extension/meschain/trendyol",
        "extension/meschain/trendyol/dashboard",
        "extension/meschain/trendyol/product",
        "extension/meschain/trendyol/order",
        "extension/meschain/trendyol/settings",
        "extension/meschain/trendyol/logs"
    ],
    "support": {
        "documentation": "https://docs.meschain.com/trendyol-integration",
        "support_email": "support@meschain.com",
        "github": "https://github.com/meschain/trendyol-integration",
        "forum": "https://community.meschain.com"
    },
    "changelog": {
        "1.0.0": {
            "date": "2025-06-21",
            "changes": [
                "Initial release",
                "Complete Trendyol API integration",
                "Product synchronization system",
                "Order management workflow",
                "Real-time monitoring dashboard",
                "Security audit tools",
                "Performance testing suite",
                "Automated deployment scripts",
                "Comprehensive documentation"
            ]
        }
    },
    "testing": {
        "unit_tests": "PHPUnit test suite for core functionality",
        "integration_tests": "Full system integration testing",
        "e2e_tests": "End-to-end user journey testing",
        "performance_tests": "Load testing and performance benchmarks",
        "security_tests": "Security vulnerability assessment"
    },
    "deployment": {
        "automated": true,
        "rollback_support": true,
        "health_checks": true,
        "monitoring": true,
        "backup_creation": true
    },
    "build": {
        "ocmod_package": true,
        "minification": false,
        "compression": true,
        "documentation_included": true
    }
}
