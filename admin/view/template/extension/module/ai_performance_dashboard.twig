{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="button" id="refresh-metrics" class="btn btn-primary">
          <i class="fa fa-refresh"></i> {{ text_refresh }}
        </button>
        <button type="button" id="export-metrics" class="btn btn-success">
          <i class="fa fa-download"></i> {{ text_export }}
        </button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  
  <div class="container-fluid">
    <!-- AI Performance Overview -->
    <div class="row">
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-brain fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right">
                <div class="huge" id="ai-accuracy">{{ ai_accuracy }}%</div>
                <div>{{ text_ai_accuracy }}</div>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <span class="pull-left">{{ text_target }}: 92%+</span>
            <span class="pull-right">
              <i class="fa fa-arrow-circle-right"></i>
            </span>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-clock-o fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right">
                <div class="huge" id="response-time">{{ response_time }}ms</div>
                <div>{{ text_response_time }}</div>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <span class="pull-left">{{ text_target }}: &lt;35ms</span>
            <span class="pull-right">
              <i class="fa fa-arrow-circle-right"></i>
            </span>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-warning">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-cogs fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right">
                <div class="huge" id="automation-coverage">{{ automation_coverage }}%</div>
                <div>{{ text_automation_coverage }}</div>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <span class="pull-left">{{ text_target }}: 95%+</span>
            <span class="pull-right">
              <i class="fa fa-arrow-circle-right"></i>
            </span>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-line-chart fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right">
                <div class="huge" id="prediction-accuracy">{{ prediction_accuracy }}%</div>
                <div>{{ text_prediction_accuracy }}</div>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <span class="pull-left">{{ text_target }}: 90%+</span>
            <span class="pull-right">
              <i class="fa fa-arrow-circle-right"></i>
            </span>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- AI Models Performance -->
    <div class="row">
      <div class="col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            <i class="fa fa-bar-chart-o fa-fw"></i> {{ text_ai_models_performance }}
          </div>
          <div class="panel-body">
            <canvas id="aiModelsChart" width="400" height="200"></canvas>
          </div>
        </div>
      </div>
      
      <div class="col-lg-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <i class="fa fa-tasks fa-fw"></i> {{ text_active_ai_features }}
          </div>
          <div class="panel-body">
            <div class="list-group">
              <div class="list-group-item">
                <span class="badge" id="product-matching-status">{{ product_matching_status }}</span>
                <i class="fa fa-search fa-fw"></i> {{ text_product_matching }}
              </div>
              <div class="list-group-item">
                <span class="badge" id="pricing-algorithm-status">{{ pricing_algorithm_status }}</span>
                <i class="fa fa-money fa-fw"></i> {{ text_pricing_algorithm }}
              </div>
              <div class="list-group-item">
                <span class="badge" id="predictive-analytics-status">{{ predictive_analytics_status }}</span>
                <i class="fa fa-line-chart fa-fw"></i> {{ text_predictive_analytics }}
              </div>
              <div class="list-group-item">
                <span class="badge" id="demand-forecasting-status">{{ demand_forecasting_status }}</span>
                <i class="fa fa-area-chart fa-fw"></i> {{ text_demand_forecasting }}
              </div>
              <div class="list-group-item">
                <span class="badge" id="inventory-optimization-status">{{ inventory_optimization_status }}</span>
                <i class="fa fa-cubes fa-fw"></i> {{ text_inventory_optimization }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Real-time Processing Metrics -->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <i class="fa fa-clock-o fa-fw"></i> {{ text_realtime_processing }}
          </div>
          <div class="panel-body">
            <canvas id="processingTimeChart" width="400" height="200"></canvas>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <i class="fa fa-tachometer fa-fw"></i> {{ text_accuracy_trends }}
          </div>
          <div class="panel-body">
            <canvas id="accuracyTrendChart" width="400" height="200"></canvas>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Marketplace-specific AI Performance -->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <i class="fa fa-shopping-cart fa-fw"></i> {{ text_marketplace_ai_performance }}
          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover" id="marketplace-performance-table">
                <thead>
                  <tr>
                    <th>{{ text_marketplace }}</th>
                    <th>{{ text_ai_accuracy }}</th>
                    <th>{{ text_response_time }}</th>
                    <th>{{ text_automation_rate }}</th>
                    <th>{{ text_predictions_today }}</th>
                    <th>{{ text_status }}</th>
                    <th>{{ text_actions }}</th>
                  </tr>
                </thead>
                <tbody>
                  {% for marketplace in marketplaces %}
                  <tr>
                    <td>
                      <img src="{{ marketplace.logo }}" alt="{{ marketplace.name }}" width="24" height="24">
                      {{ marketplace.name }}
                    </td>
                    <td>
                      <span class="label label-{{ marketplace.accuracy_class }}">
                        {{ marketplace.accuracy }}%
                      </span>
                    </td>
                    <td>{{ marketplace.response_time }}ms</td>
                    <td>
                      <div class="progress">
                        <div class="progress-bar progress-bar-{{ marketplace.automation_class }}" 
                             style="width: {{ marketplace.automation_rate }}%">
                          {{ marketplace.automation_rate }}%
                        </div>
                      </div>
                    </td>
                    <td>{{ marketplace.predictions_today }}</td>
                    <td>
                      <span class="label label-{{ marketplace.status_class }}">
                        {{ marketplace.status }}
                      </span>
                    </td>
                    <td>
                      <button type="button" class="btn btn-xs btn-primary" 
                              onclick="optimizeMarketplace('{{ marketplace.code }}')">
                        <i class="fa fa-cog"></i> {{ text_optimize }}
                      </button>
                      <button type="button" class="btn btn-xs btn-info" 
                              onclick="viewDetails('{{ marketplace.code }}')">
                        <i class="fa fa-eye"></i> {{ text_details }}
                      </button>
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- AI Alerts and Recommendations -->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <i class="fa fa-exclamation-triangle fa-fw"></i> {{ text_ai_alerts }}
          </div>
          <div class="panel-body">
            <div id="ai-alerts-container">
              {% for alert in ai_alerts %}
              <div class="alert alert-{{ alert.type }} alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">
                  <span>&times;</span>
                </button>
                <strong>{{ alert.title }}</strong> {{ alert.message }}
                <br><small>{{ alert.timestamp }}</small>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <i class="fa fa-lightbulb-o fa-fw"></i> {{ text_ai_recommendations }}
          </div>
          <div class="panel-body">
            <div id="ai-recommendations-container">
              {% for recommendation in ai_recommendations %}
              <div class="recommendation-item">
                <div class="recommendation-header">
                  <i class="fa fa-{{ recommendation.icon }}"></i>
                  <strong>{{ recommendation.title }}</strong>
                  <span class="label label-{{ recommendation.priority_class }}">
                    {{ recommendation.priority }}
                  </span>
                </div>
                <div class="recommendation-body">
                  {{ recommendation.description }}
                </div>
                <div class="recommendation-actions">
                  <button type="button" class="btn btn-xs btn-success" 
                          onclick="implementRecommendation('{{ recommendation.id }}')">
                    <i class="fa fa-check"></i> {{ text_implement }}
                  </button>
                  <button type="button" class="btn btn-xs btn-default" 
                          onclick="dismissRecommendation('{{ recommendation.id }}')">
                    <i class="fa fa-times"></i> {{ text_dismiss }}
                  </button>
                </div>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- AI Configuration Modal -->
<div class="modal fade" id="aiConfigModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
        <h4 class="modal-title">{{ text_ai_configuration }}</h4>
      </div>
      <div class="modal-body">
        <form id="ai-config-form">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>{{ text_accuracy_threshold }}</label>
                <input type="number" class="form-control" id="accuracy-threshold" 
                       min="0.5" max="1.0" step="0.01" value="{{ accuracy_threshold }}">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>{{ text_response_time_limit }}</label>
                <input type="number" class="form-control" id="response-time-limit" 
                       min="10" max="1000" value="{{ response_time_limit }}">
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label>{{ text_ai_features }}</label>
                <div class="checkbox">
                  <label>
                    <input type="checkbox" id="enable-product-matching" 
                           {{ product_matching_enabled ? 'checked' : '' }}>
                    {{ text_enable_product_matching }}
                  </label>
                </div>
                <div class="checkbox">
                  <label>
                    <input type="checkbox" id="enable-pricing-algorithm" 
                           {{ pricing_algorithm_enabled ? 'checked' : '' }}>
                    {{ text_enable_pricing_algorithm }}
                  </label>
                </div>
                <div class="checkbox">
                  <label>
                    <input type="checkbox" id="enable-predictive-analytics" 
                           {{ predictive_analytics_enabled ? 'checked' : '' }}>
                    {{ text_enable_predictive_analytics }}
                  </label>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          {{ text_cancel }}
        </button>
        <button type="button" class="btn btn-primary" onclick="saveAIConfiguration()">
          {{ text_save }}
        </button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function() {
    // Initialize charts
    initializeAICharts();
    
    // Auto-refresh every 30 seconds
    setInterval(refreshMetrics, 30000);
    
    // Initialize DataTable
    $('#marketplace-performance-table').DataTable({
        "responsive": true,
        "pageLength": 10,
        "order": [[ 1, "desc" ]]
    });
});

function initializeAICharts() {
    // AI Models Performance Chart
    var ctx1 = document.getElementById('aiModelsChart').getContext('2d');
    var aiModelsChart = new Chart(ctx1, {
        type: 'radar',
        data: {
            labels: ['{{ text_product_matching }}', '{{ text_pricing_algorithm }}', 
                    '{{ text_predictive_analytics }}', '{{ text_demand_forecasting }}', 
                    '{{ text_inventory_optimization }}'],
            datasets: [{
                label: '{{ text_accuracy }}',
                data: [{{ ai_models_data.accuracy }}],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 2
            }, {
                label: '{{ text_performance }}',
                data: [{{ ai_models_data.performance }}],
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            scales: {
                r: {
                    beginAtZero: true,
                    max: 100
                }
            }
        }
    });
    
    // Processing Time Chart
    var ctx2 = document.getElementById('processingTimeChart').getContext('2d');
    var processingTimeChart = new Chart(ctx2, {
        type: 'line',
        data: {
            labels: [{{ processing_time_labels }}],
            datasets: [{
                label: '{{ text_response_time }} (ms)',
                data: [{{ processing_time_data }}],
                borderColor: 'rgba(75, 192, 192, 1)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderWidth: 2,
                fill: true
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    
    // Accuracy Trend Chart
    var ctx3 = document.getElementById('accuracyTrendChart').getContext('2d');
    var accuracyTrendChart = new Chart(ctx3, {
        type: 'line',
        data: {
            labels: [{{ accuracy_trend_labels }}],
            datasets: [{
                label: '{{ text_accuracy }} (%)',
                data: [{{ accuracy_trend_data }}],
                borderColor: 'rgba(153, 102, 255, 1)',
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderWidth: 2,
                fill: true
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    max: 100
                }
            }
        }
    });
}

function refreshMetrics() {
    $.ajax({
        url: '{{ refresh_url }}',
        type: 'GET',
        dataType: 'json',
        success: function(data) {
            // Update metrics
            $('#ai-accuracy').text(data.ai_accuracy + '%');
            $('#response-time').text(data.response_time + 'ms');
            $('#automation-coverage').text(data.automation_coverage + '%');
            $('#prediction-accuracy').text(data.prediction_accuracy + '%');
            
            // Update status indicators
            updateStatusIndicators(data.status_indicators);
            
            // Update alerts
            updateAIAlerts(data.alerts);
            
            // Update recommendations
            updateAIRecommendations(data.recommendations);
        },
        error: function() {
            console.error('Failed to refresh AI metrics');
        }
    });
}

function optimizeMarketplace(marketplace) {
    $.ajax({
        url: '{{ optimize_url }}',
        type: 'POST',
        data: { marketplace: marketplace },
        dataType: 'json',
        success: function(data) {
            if (data.success) {
                alert('{{ text_optimization_started }}');
                refreshMetrics();
            } else {
                alert('{{ text_optimization_failed }}: ' + data.error);
            }
        }
    });
}

function viewDetails(marketplace) {
    window.open('{{ details_url }}&marketplace=' + marketplace, '_blank');
}

function saveAIConfiguration() {
    var config = {
        accuracy_threshold: $('#accuracy-threshold').val(),
        response_time_limit: $('#response-time-limit').val(),
        product_matching_enabled: $('#enable-product-matching').is(':checked'),
        pricing_algorithm_enabled: $('#enable-pricing-algorithm').is(':checked'),
        predictive_analytics_enabled: $('#enable-predictive-analytics').is(':checked')
    };
    
    $.ajax({
        url: '{{ save_config_url }}',
        type: 'POST',
        data: config,
        dataType: 'json',
        success: function(data) {
            if (data.success) {
                $('#aiConfigModal').modal('hide');
                alert('{{ text_config_saved }}');
                refreshMetrics();
            } else {
                alert('{{ text_config_save_failed }}: ' + data.error);
            }
        }
    });
}

function implementRecommendation(recommendationId) {
    $.ajax({
        url: '{{ implement_recommendation_url }}',
        type: 'POST',
        data: { recommendation_id: recommendationId },
        dataType: 'json',
        success: function(data) {
            if (data.success) {
                alert('{{ text_recommendation_implemented }}');
                refreshMetrics();
            } else {
                alert('{{ text_implementation_failed }}: ' + data.error);
            }
        }
    });
}

function dismissRecommendation(recommendationId) {
    $.ajax({
        url: '{{ dismiss_recommendation_url }}',
        type: 'POST',
        data: { recommendation_id: recommendationId },
        dataType: 'json',
        success: function(data) {
            if (data.success) {
                $('[data-recommendation-id="' + recommendationId + '"]').fadeOut();
            }
        }
    });
}

// Export metrics
$('#export-metrics').click(function() {
    window.open('{{ export_url }}', '_blank');
});

// Refresh button
$('#refresh-metrics').click(function() {
    refreshMetrics();
});
</script>

