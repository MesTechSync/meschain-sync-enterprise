/**
 * Port 3004 - Performance Dashboard Server
 * MesChain-Sync Enterprise Performance Monitoring Center
 * 
 * Features:
 * - Real-time performance metrics
 * - System monitoring dashboard
 * - Resource usage analytics
 * - Performance optimization tools
 * - Advanced reporting
 */

const express = require('express');
const path = require('path');
const cors = require('cors');
const fs = require('fs');

const app = express();
const PORT = 3004;

// Middleware
app.use(cors({
    origin: ['http://localhost:3000', 'http://localhost:3001', 'http://localhost:3002', 'http://localhost:8080'],
    credentials: true
}));
app.use(express.json());
app.use(express.static(path.join(__dirname, 'CursorDev')));

// Authentication middleware
app.use((req, res, next) => {
    // For now, allow all requests - will integrate authentication later
    req.user = { role: 'admin', id: 1, username: 'admin' };
    next();
});

// Serve the main performance dashboard
app.get('/', (req, res) => {
    const dashboardPath = path.join(__dirname, 'CursorDev/FRONTEND_COMPONENTS/port_3004_performance_dashboard_with_login.html');
    if (fs.existsSync(dashboardPath)) {
        res.sendFile(dashboardPath);
    } else {
        res.send(`
<!DOCTYPE html>
<html lang="tr">
