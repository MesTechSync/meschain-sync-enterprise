// API endpoint for performance metrics
app.get('/api/metrics', (req, res) => {
    res.json({
        status: 'active',
        uptime: '98.5%',
        response_time: '45ms',
        memory_usage: '2.1GB',
        active_sessions: 156,
        cpu_usage: '34%',
        disk_usage: '67%',
        network_throughput: '125 MB/s',
        error_rate: '0.02%',
        timestamp: new Date().toISOString()
    });
});

// Health check endpoint
app.get('/health', (req, res) => {
    res.json({
        service: 'Performance Dashboard',
        port: PORT,
        status: 'healthy',
        timestamp: new Date().toISOString(),
        authentication: 'pending_integration'
    });
});

// Start server
app.listen(PORT, () => {
    console.log('üöÄ Performance Dashboard Server Started');
    console.log(`üìç URL: http://localhost:${PORT}`);
    console.log(`‚ö° Service: Performance Monitoring Center`);
    console.log(`üîê Status: Ready for Priority 3 authentication integration`);
    console.log('‚îÅ'.repeat(60));
});

// Graceful shutdown
process.on('SIGINT', () => {
    console.log('\\nüõë Performance Dashboard Server shutting down...');
    process.exit(0);
});
