<div class="panel panel-default">
  <div class="panel-heading"><b>{{ platform_name }} Paneli</b></div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <b>Kullanıcı:</b> {{ username }}<br>
        <b>Tema:</b> {{ theme }}<br>
      </div>
      <div class="col-md-6 text-right">
        {% if is_admin %}
          <span class="label label-success">Admin Paneli</span>
        {% else %}
          <span class="label label-default">Kullanıcı Paneli</span>
        {% endif %}
      </div>
    </div>
    <hr>
    {% if error_warning %}
      <div class="alert alert-danger">{{ error_warning }}</div>
    {% endif %}
    {% if success %}
      <div class="alert alert-success">{{ success }}</div>
    {% endif %}
    <form action="{{ action }}" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="input-api-key">{{ api_key_label }}</label>
        <input type="text" name="module_trendyol_api_key" value="{{ module_trendyol_api_key }}" class="form-control" id="input-api-key" />
      </div>
      {% if is_admin %}
        <!-- Admin paneline özel ek ayar ve bilgiler buraya eklenebilir -->
        <div class="alert alert-info">Admin panelindesiniz. Ek ayarlar burada görünebilir.</div>
      {% endif %}
      <button type="submit" class="btn btn-primary">Kaydet</button>
      <a href="{{ cancel }}" class="btn btn-default">İptal</a>
    </form>
  </div>
</div> 
