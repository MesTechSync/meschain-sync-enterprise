{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <button type="submit" form="form-module" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i>
                </button>
                <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light">
                    <i class="fa-solid fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fas fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endif %}
        
        <div class="card">
            <div class="card-header">
                <i class="fa-solid fa-sync"></i> {{ text_edit }}
            </div>
            <div class="card-body">
                <form id="form-module" action="{{ save }}" method="post" data-oc-toggle="ajax">
                    <div class="row mb-3">
                        <label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <div class="form-check form-switch form-switch-lg">
                                <input type="hidden" name="module_meschain_sync_status" value="0"/>
                                <input type="checkbox" name="module_meschain_sync_status" value="1" id="input-status" class="form-check-input"{% if module_meschain_sync_status %} checked{% endif %}/>
                            </div>
                            <div class="form-text">{{ help_status|default('Enable or disable the MesChain-Sync Enterprise module') }}</div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <i class="fa-solid fa-chart-line"></i> {{ text_dashboard|default('Dashboard') }}
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 col-md-3">
                        <div class="card bg-primary text-white mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>{{ total_products|default('0') }}</h4>
                                        <p>{{ text_total_products|default('Total Products') }}</p>
                                    </div>
                                    <div>
                                        <i class="fa-solid fa-box fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-sm-6 col-md-3">
                        <div class="card bg-success text-white mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>{{ synced_products|default('0') }}</h4>
                                        <p>{{ text_synced_products|default('Synced Products') }}</p>
                                    </div>
                                    <div>
                                        <i class="fa-solid fa-check-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-sm-6 col-md-3">
                        <div class="card bg-warning text-white mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>{{ pending_orders|default('0') }}</h4>
                                        <p>{{ text_pending_orders|default('Pending Orders') }}</p>
                                    </div>
                                    <div>
                                        <i class="fa-solid fa-clock fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-sm-6 col-md-3">
                        <div class="card bg-info text-white mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>{{ marketplace_count|default('7') }}</h4>
                                        <p>{{ text_marketplaces|default('Marketplaces') }}</p>
                                    </div>
                                    <div>
                                        <i class="fa-solid fa-store fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="alert alert-success">
                            <h5><i class="fa-solid fa-info-circle"></i> {{ text_meschain|default('MesChain-Sync Enterprise') }}</h5>
                            <p>Multi-marketplace integration platform with AI-powered optimization. Connect to 7+ major marketplaces including Trendyol, Hepsiburada, Amazon, N11, eBay, and more.</p>
                            <div class="btn-group mt-2">
                                <a href="{{ manage_marketplaces }}" class="btn btn-outline-primary">
                                    <i class="fa-solid fa-store"></i> Manage Marketplaces
                                </a>
                                <a href="{{ analytics }}" class="btn btn-outline-info">
                                    <i class="fa-solid fa-chart-pie"></i> Analytics
                                </a>
                                <a href="{{ settings }}" class="btn btn-outline-secondary">
                                    <i class="fa-solid fa-cogs"></i> Settings
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Modal -->
<div class="modal fade" id="loadingModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body text-center p-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <div class="mt-2">{{ text_testing }}</div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Test connection buttons
    $('.btn-test-connection').click(function() {
        var marketplace = $(this).data('marketplace');
        var statusBadge = $('#' + marketplace + '-status');
        
        $('#loadingModal').modal('show');
        statusBadge.removeClass('bg-success bg-danger').addClass('bg-warning').text('{{ text_testing }}');
        
        $.ajax({
            url: 'index.php?route=extension/module/meschain_sync/testConnection&user_token={{ user_token }}',
            type: 'POST',
            data: {
                marketplace: marketplace,
                api_key: $('input[name="' + marketplace + '_api_key"]').val(),
                api_secret: $('input[name="' + marketplace + '_api_secret"]').val()
            },
            dataType: 'json',
            success: function(json) {
                $('#loadingModal').modal('hide');
                if (json.success) {
                    statusBadge.removeClass('bg-warning bg-danger').addClass('bg-success').text('{{ text_connected }}');
                    alert('{{ text_connection_success }}');
                } else {
                    statusBadge.removeClass('bg-warning bg-success').addClass('bg-danger').text('{{ text_disconnected }}');
                    alert(json.error || '{{ error_connection }}');
                }
            },
            error: function() {
                $('#loadingModal').modal('hide');
                statusBadge.removeClass('bg-warning bg-success').addClass('bg-danger').text('{{ text_disconnected }}');
                alert('{{ error_connection }}');
            }
        });
    });

    // Sync buttons
    $('#btn-sync-all-products').click(function() {
        if (confirm('Tüm pazaryerlerinden ürünleri senkronize etmek istediğinizden emin misiniz?')) {
            $(this).prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Senkronize Ediliyor...');
            
            $.ajax({
                url: 'index.php?route=extension/module/meschain_sync/syncAllProducts&user_token={{ user_token }}',
                type: 'POST',
                dataType: 'json',
                success: function(json) {
                    if (json.success) {
                        alert('{{ text_sync_success }}');
                        location.reload();
                    } else {
                        alert(json.error || '{{ error_sync }}');
                    }
                    $('#btn-sync-all-products').prop('disabled', false).html('<i class="fas fa-sync"></i> {{ button_sync_products }}');
                }
            });
        }
    });
});
</script>

