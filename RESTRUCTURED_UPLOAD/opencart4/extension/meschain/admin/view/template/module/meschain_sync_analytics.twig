{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <a href="{{ back }}" data-bs-toggle="tooltip" title="Back" class="btn btn-light">
                    <i class="fa-solid fa-reply"></i>
                </a>
            </div>
            <h1><i class="fa-solid fa-chart-pie"></i> Analytics Dashboard</h1>
            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        <!-- Stats Overview -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4>{{ analytics.products.total_products|default(0) }}</h4>
                                <p>Total Products</p>
                            </div>
                            <div>
                                <i class="fa-solid fa-box fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4>{{ analytics.products.synced_products|default(0) }}</h4>
                                <p>Synced Products</p>
                            </div>
                            <div>
                                <i class="fa-solid fa-check fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4>{{ analytics.sales.total_orders|default(0) }}</h4>
                                <p>Total Orders</p>
                            </div>
                            <div>
                                <i class="fa-solid fa-shopping-cart fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4>{{ analytics.sync_health.health_percentage|default(100) }}%</h4>
                                <p>Sync Health</p>
                            </div>
                            <div>
                                <i class="fa-solid fa-heart fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Marketplace Performance -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="fa-solid fa-chart-bar"></i> Marketplace Performance
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Marketplace</th>
                                <th>Product Count</th>
                                <th>Order Count</th>
                                <th>Performance</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for marketplace in analytics.marketplaces %}
                            <tr>
                                <td>
                                    <strong>{{ marketplace.name }}</strong><br>
                                    <small class="text-muted">{{ marketplace.code }}</small>
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ marketplace.product_count }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-success">{{ marketplace.order_count }}</span>
                                </td>
                                <td>
                                    <div class="progress">
                                        {% set percentage = marketplace.order_count > 0 ? (marketplace.order_count / analytics.sales.total_orders * 100) : 0 %}
                                        <div class="progress-bar" style="width: {{ percentage }}%">{{ percentage|round(1) }}%</div>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="card">
            <div class="card-header">
                <i class="fa-solid fa-list"></i> Recent Activity
            </div>
            <div class="card-body">
                {% if analytics.recent_activity %}
                <div class="list-group">
                    {% for activity in analytics.recent_activity %}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <div>
                                {% if activity.type == 'error' %}
                                    <i class="fa-solid fa-exclamation-circle text-danger"></i>
                                {% elseif activity.type == 'warning' %}
                                    <i class="fa-solid fa-exclamation-triangle text-warning"></i>
                                {% elseif activity.type == 'info' %}
                                    <i class="fa-solid fa-info-circle text-info"></i>
                                {% else %}
                                    <i class="fa-solid fa-check-circle text-success"></i>
                                {% endif %}
                                {{ activity.message }}
                            </div>
                            <small class="text-muted">{{ activity.date_added }}</small>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="alert alert-info">
                    <i class="fa-solid fa-info-circle"></i> No recent activity to display.
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{{ footer }} 