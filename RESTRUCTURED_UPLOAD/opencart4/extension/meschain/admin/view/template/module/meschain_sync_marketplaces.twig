{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <a href="{{ back }}" data-bs-toggle="tooltip" title="Back" class="btn btn-light">
                    <i class="fa-solid fa-reply"></i>
                </a>
            </div>
            <h1><i class="fa-solid fa-store"></i> Manage Marketplaces</h1>
            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <i class="fa-solid fa-store"></i> Marketplace Configuration
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Marketplace</th>
                                <th>Status</th>
                                <th>API Endpoint</th>
                                <th>Commission Rate</th>
                                <th>Products</th>
                                <th>Orders</th>
                                <th>Last Sync</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for marketplace in marketplaces %}
                            <tr>
                                <td>
                                    <strong>{{ marketplace.name }}</strong><br>
                                    <small class="text-muted">{{ marketplace.code }}</small>
                                </td>
                                <td>
                                    {% if marketplace.status %}
                                        <span class="badge bg-success">Active</span>
                                    {% else %}
                                        <span class="badge bg-danger">Inactive</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <small>{{ marketplace.api_endpoint }}</small>
                                </td>
                                <td>{{ marketplace.commission_rate }}%</td>
                                <td>
                                    <span class="badge bg-primary">{{ marketplace.product_count|default(0) }}</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ marketplace.order_count|default(0) }}</span>
                                </td>
                                <td>
                                    <small>{{ marketplace.last_sync|default('Never') }}</small>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-primary" onclick="configure({{ marketplace.marketplace_id }})">
                                            <i class="fa-solid fa-cog"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-success" onclick="testConnection({{ marketplace.marketplace_id }})">
                                            <i class="fa-solid fa-plug"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-info" onclick="syncProducts({{ marketplace.marketplace_id }})">
                                            <i class="fa-solid fa-sync"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <i class="fa-solid fa-info-circle"></i> Marketplace Information
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6>Available Marketplaces:</h6>
                    <ul class="mb-0">
                        <li><strong>Trendyol:</strong> Turkey's leading e-commerce platform</li>
                        <li><strong>Hepsiburada:</strong> Major Turkish online marketplace</li>
                        <li><strong>Amazon TR:</strong> Amazon Turkey marketplace</li>
                        <li><strong>N11:</strong> Popular Turkish shopping site</li>
                        <li><strong>eBay:</strong> Global auction and marketplace site</li>
                        <li><strong>GittiGidiyor:</strong> Turkish online auction site</li>
                        <li><strong>Pazarama:</strong> Growing Turkish e-commerce platform</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function configure(marketplaceId) {
    alert('Configuration for marketplace ID: ' + marketplaceId + ' will be implemented');
}

function testConnection(marketplaceId) {
    alert('Testing connection for marketplace ID: ' + marketplaceId);
    // TODO: Implement connection test
}

function syncProducts(marketplaceId) {
    if (confirm('Sync products for this marketplace?')) {
        alert('Product sync for marketplace ID: ' + marketplaceId + ' initiated');
        // TODO: Implement product sync
    }
}
</script>

