<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-shopping-cart"></i> {{ heading_title }}</h3>
  </div>
  <div class="panel-body">
    {% if orders %}
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Status</th>
              <th>Total</th>
              <th>Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {% for order in orders %}
              <tr>
                <td>{{ order.order_id }}</td>
                <td>{{ order.customer }}</td>
                <td>{{ order.status }}</td>
                <td>{{ order.total }}</td>
                <td>{{ order.date_added }}</td>
                <td><a href="{{ order.view }}" class="btn btn-info btn-xs">View</a></td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% else %}
      <p class="text-center text-muted">No recent orders</p>
    {% endif %}
  </div>
  <div class="panel-footer text-center">
    <a href="{{ order }}">{{ text_view }}</a>
  </div>
</div> 