# OpenCart Integration Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_USER=opencart_user
DB_PASSWORD=your_database_password_here
DB_NAME=opencart
DB_PORT=3306

# OpenCart API Configuration
OPENCART_API_URL=https://your-opencart-store.com/index.php?route=api
OPENCART_API_TOKEN=your_api_token_here
OPENCART_STORE_ID=0
OPENCART_LANGUAGE=en-gb
OPENCART_CURRENCY=USD

# Server Configuration
OPENCART_PORT=3008
OPENCART_HOST=0.0.0.0
WEBSOCKET_PORT=3007
NODE_ENV=development

# Security
JWT_SECRET=opencart-meschain-sync-secret-2025-change-this-in-production

# AI Configuration (Optional)
OPENAI_API_KEY=your_openai_api_key_here
AI_ENABLED=true
AI_BEHAVIOR_ANALYSIS=true
AI_SALES_FORECASTING=true
AI_PRODUCT_RECOMMENDATIONS=true
AI_INVENTORY_OPTIMIZATION=true

# Barcode Configuration
BARCODE_ENABLED=true
BARCODE_SCANNER_TYPE=usb
BARCODE_FORMATS=EAN13,UPC,Code128,Code39,QR

# Marketplace Integration
MARKETPLACE_SYNC_ENABLED=true
MARKETPLACE_PLATFORMS=trendyol,hepsiburada,n11,gittigidiyor
MARKETPLACE_SYNC_INTERVAL=300000

# Analytics
ANALYTICS_ADVANCED=true
ANALYTICS_ML_PREDICTIONS=true
ANALYTICS_RETENTION_DAYS=90

# Performance
PERFORMANCE_CACHING=true
CACHE_EXPIRY=3600
PERFORMANCE_COMPRESSION=true
REALTIME_SYNC_INTERVAL=30000

# Multi-store (Advanced)
OPENCART_MULTISTORE=false
OPENCART_STORES=[]
OPENCART_DEFAULT_STORE=0
