// API endpoints for inventory management
app.get('/api/inventory', (req, res) => {
    res.json({
        status: 'success',
        total_items: 12847,
        low_stock_items: 156,
        out_of_stock_items: 23,
        fill_rate: 89.2,
        total_value: 2400000,
        warehouses: 5,
        items: [
            { id: 1, name: 'Smartphone X1', sku: 'SMT-X1-001', stock: 12, min_stock: 20, location: 'Istanbul' },
            { id: 2, name: 'Laptop Pro 15', sku: 'LPT-P15-002', stock: 0, min_stock: 10, location: 'Ankara' },
            { id: 3, name: 'Wireless Headphones', sku: 'WHP-001', stock: 67, min_stock: 15, location: 'Izmir' }
        ]
    });
});

app.get('/api/warehouses', (req, res) => {
    res.json({
        status: 'success',
        warehouses: [
            { id: 1, name: 'Main Warehouse - Istanbul', capacity: 5000, current: 3789, status: 'operational' },
            { id: 2, name: 'Distribution Center - Ankara', capacity: 3000, current: 1856, status: 'operational' },
            { id: 3, name: 'Regional Hub - Izmir', capacity: 2000, current: 1760, status: 'near_full' }
        ]
    });
});

app.get('/api/alerts', (req, res) => {
    res.json({
        status: 'success',
        alerts: [
            { type: 'low_stock', message: 'Smartphone X1 - Low stock (12 units remaining)', severity: 'warning' },
            { type: 'out_of_stock', message: 'Laptop Pro 15 - Out of stock in Istanbul warehouse', severity: 'critical' },
            { type: 'incoming_shipment', message: 'Incoming shipment: 500 units arriving tomorrow', severity: 'info' }
        ]
    });
});

// Health check endpoint
app.get('/health', (req, res) => {
    res.json({
        service: 'Inventory Management Hub',
        port: PORT,
        status: 'healthy',
        timestamp: new Date().toISOString(),
        authentication: 'pending_integration'
    });
});

// Start server
app.listen(PORT, () => {
    console.log('üöÄ Inventory Management Hub Server Started');
    console.log(`üìç URL: http://localhost:${PORT}`);
    console.log(`üè≠ Service: Multi-Warehouse Inventory Control`);
    console.log(`üîê Status: Ready for Priority 3 authentication integration`);
    console.log('‚îÅ'.repeat(60));
});

// Graceful shutdown
process.on('SIGINT', () => {
    console.log('\\nüõë Inventory Management Hub shutting down...');
    process.exit(0);
});
