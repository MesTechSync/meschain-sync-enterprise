/**
 * Port 3007 - Inventory Management Hub Server
 * MesChain-Sync Enterprise Inventory Control Center
 * 
 * Features:
 * - Real-time inventory tracking
 * - Multi-warehouse management
 * - Stock alerts and automation
 * - Inventory analytics
 * - Supply chain optimization
 */

const express = require('express');
const path = require('path');
const cors = require('cors');
const fs = require('fs');

const app = express();
const PORT = 3007;

// Middleware
app.use(cors({
    origin: ['http://localhost:3000', 'http://localhost:3001', 'http://localhost:3002', 'http://localhost:8080'],
    credentials: true
}));
app.use(express.json());
app.use(express.static(path.join(__dirname, 'CursorDev')));

// Authentication middleware
app.use((req, res, next) => {
    // For now, allow all requests - will integrate authentication later
    req.user = { role: 'marketplace_manager', id: 1, username: 'inventory_manager' };
    next();
});

// Serve the main inventory management dashboard
