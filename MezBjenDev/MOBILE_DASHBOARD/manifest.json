  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.mezbjen.dashboard",
      "id": "com.mezbjen.dashboard"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/mezbjen-dashboard/id123456789",
      "id": "123456789"
    }
  ],
  "share_target": {
    "action": "./share-handler",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", ".csv", ".xlsx", ".pdf"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "mezbjen",
      "url": "./dashboard.html?action=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}
