{# Trendyol Modül Özel Login Ekranı #}
<div class="trendyol-login-box">
  <div class="login-logo"><i class="fa fa-shopping-bag"></i> <b>Trendyol Modül Girişi</b></div>
  {% if error_warning %}<div class="alert alert-danger">{{ error_warning }}</div>{% endif %}
  {% if success %}<div class="alert alert-success">{{ success }}</div>{% endif %}
  <form action="{{ action }}" method="post" autocomplete="off">
    <div class="form-group">
      <label>Kullanıcı Adı</label>
      <input type="text" name="username" class="form-control" required />
    </div>
    <div class="form-group">
      <label>Şifre</label>
      <input type="password" name="password" class="form-control" required />
    </div>
    <div class="form-group">
      <label>2FA Kodu <span class="text-muted">(opsiyonel, pasif)</span></label>
      <input type="text" name="otp" class="form-control" disabled placeholder="Yakında..." />
    </div>
    <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
  </form>
  <div class="login-footer">Güvenli giriş &mdash; <i class="fa fa-lock"></i></div>
</div>
<style>
.trendyol-login-box { max-width: 400px; margin: 60px auto; background: #fff; border-radius: 12px; box-shadow: 0 2px 16px #eee; padding: 32px; text-align:center; }
.login-logo { font-size:1.5em; color:#f90; margin-bottom:1.5em; }
.form-group { margin-bottom:1.2em; text-align:left; }
.form-group label { font-weight:600; color:#3a8fd8; }
.form-control { width:100%; padding:0.6em; border-radius:6px; border:1px solid #e0e0e0; font-size:1.1em; }
.btn { width:100%; border-radius:6px; font-weight:600; background:#f90; color:#fff; border:none; padding:0.8em; font-size:1.1em; }
.alert { margin-bottom:1em; border-radius:6px; padding:0.8em 1em; }
.alert-danger { background:#fff0f0; color:#d33; }
.alert-success { background:#eafbe7; color:#2e7d32; }
.login-footer { margin-top:1.5em; color:#888; font-size:1em; }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" /> 