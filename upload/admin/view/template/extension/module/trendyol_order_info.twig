{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        {% if not converted %}
        <a href="{{ convert }}" data-toggle="tooltip" title="{{ button_convert }}" class="btn btn-success"><i class="fa fa-exchange"></i> {{ button_convert }}</a>
        {% endif %}
        <a href="{{ back }}" data-toggle="tooltip" title="{{ button_back }}" class="btn btn-default"><i class="fa fa-reply"></i> {{ button_back }}</a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    
    {% if converted %}
    <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_already_converted }} <a href="{{ opencart_order_url }}" target="_blank">#{{ opencart_order_id }}</a></div>
    {% endif %}
    
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-shopping-cart"></i> {{ text_order_detail }}</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered">
              <tr>
                <td style="width: 50%;"><strong>{{ text_order_id }}</strong></td>
                <td>{{ order_id }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_order_number }}</strong></td>
                <td>{{ order_number }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_date_added }}</strong></td>
                <td>{{ date_added }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_status }}</strong></td>
                <td>{{ status }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_total }}</strong></td>
                <td>{{ total }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_shipping_cost }}</strong></td>
                <td>{{ shipping_cost }}</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-user"></i> {{ text_customer_detail }}</h3>
          </div>
          <div class="panel-body">
            <table class="table table-bordered">
              <tr>
                <td style="width: 50%;"><strong>{{ text_customer_name }}</strong></td>
                <td>{{ customer_name }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_email }}</strong></td>
                <td>{{ customer_email }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_phone }}</strong></td>
                <td>{{ customer_phone }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_shipping_address }}</strong></td>
                <td>{{ shipping_address }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_shipping_city }}</strong></td>
                <td>{{ shipping_city }}</td>
              </tr>
              <tr>
                <td><strong>{{ text_shipping_district }}</strong></td>
                <td>{{ shipping_district }}</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_products }}</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <td class="text-left">{{ column_product }}</td>
                <td class="text-left">{{ column_barcode }}</td>
                <td class="text-right">{{ column_quantity }}</td>
                <td class="text-right">{{ column_price }}</td>
                <td class="text-right">{{ column_total }}</td>
              </tr>
            </thead>
            <tbody>
              {% for product in products %}
              <tr>
                <td class="text-left">{{ product.name }}</td>
                <td class="text-left">{{ product.barcode }}</td>
                <td class="text-right">{{ product.quantity }}</td>
                <td class="text-right">{{ product.price }}</td>
                <td class="text-right">{{ product.total }}</td>
              </tr>
              {% endfor %}
            </tbody>
            <tfoot>
              <tr>
                <td colspan="4" class="text-right"><strong>{{ text_sub_total }}</strong></td>
                <td class="text-right">{{ sub_total }}</td>
              </tr>
              <tr>
                <td colspan="4" class="text-right"><strong>{{ text_shipping }}</strong></td>
                <td class="text-right">{{ shipping_cost }}</td>
              </tr>
              <tr>
                <td colspan="4" class="text-right"><strong>{{ text_total }}</strong></td>
                <td class="text-right">{{ total }}</td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
    
    {% if order_history %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-history"></i> {{ text_order_history }}</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <td class="text-left">{{ column_date_added }}</td>
                <td class="text-left">{{ column_status }}</td>
                <td class="text-left">{{ column_comment }}</td>
              </tr>
            </thead>
            <tbody>
              {% for history in order_history %}
              <tr>
                <td class="text-left">{{ history.date_added }}</td>
                <td class="text-left">{{ history.status }}</td>
                <td class="text-left">{{ history.comment }}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    {% endif %}
  </div>
</div>
{{ footer }} 