{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }} - Amazon</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> Amazon Ayarları</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-amazon-api-key">{{ entry_amazon_api_key }}</label>
            <div class="col-sm-10">
              <input type="text" name="mestech_mestech_sync_amazon_api_key" value="{{ mestech_mestech_sync_amazon_api_key }}" placeholder="{{ entry_amazon_api_key }}" id="input-amazon-api-key" class="form-control" />
              <p class="help-block">{{ help_amazon_api_key }}</p>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-amazon-secret-key">{{ entry_amazon_secret_key }}</label>
            <div class="col-sm-10">
              <input type="text" name="mestech_mestech_sync_amazon_secret_key" value="{{ mestech_mestech_sync_amazon_secret_key }}" placeholder="{{ entry_amazon_secret_key }}" id="input-amazon-secret-key" class="form-control" />
              <p class="help-block">{{ help_amazon_secret_key }}</p>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-amazon-seller-id">{{ entry_amazon_seller_id }}</label>
            <div class="col-sm-10">
              <input type="text" name="mestech_mestech_sync_amazon_seller_id" value="{{ mestech_mestech_sync_amazon_seller_id }}" placeholder="{{ entry_amazon_seller_id }}" id="input-amazon-seller-id" class="form-control" />
              <p class="help-block">{{ help_amazon_seller_id }}</p>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-amazon-token">{{ entry_amazon_token }}</label>
            <div class="col-sm-10">
              <input type="text" name="mestech_mestech_sync_amazon_token" value="{{ mestech_mestech_sync_amazon_token }}" placeholder="{{ entry_amazon_token }}" id="input-amazon-token" class="form-control" />
              <p class="help-block">{{ help_amazon_token }}</p>
            </div>
          </div>
        </form>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-dashboard"></i> {{ text_dashboard }}</h3>
          </div>
          <div class="panel-body">
            <p>Amazon kontrol paneline dönün.</p>
            <a href="{{ dashboard_url }}" class="btn btn-info">{{ button_dashboard }}</a>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-question-circle"></i> {{ text_help }}</h3>
          </div>
          <div class="panel-body">
            <p>Amazon entegrasyonu hakkında yardım alın.</p>
            <a href="{{ help_url }}" class="btn btn-info">{{ button_help }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }} 