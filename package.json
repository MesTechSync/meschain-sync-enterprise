{
  "name": "meschain-sync",
  "version": "4.5.0",
  "description": "MesChain-Sync - Professional Multi-Marketplace Integration Platform for OpenCart 3.0.4.0",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --entry-file=index.html --mount=/uploads:uploads --open=/CursorDev/dist/html/",
    "start": "npm run dev",
    "build": "npm run minify-js && npm run minify-css",
    "test": "echo \"Running tests for MesChain-Sync\" && exit 0",
    "minify-js": "terser CursorDev/MARKETPLACE_UIS/*.js --compress --mangle --output=dist/js/meschain-sync.min.js",
    "minify-css": "cleancss -o dist/css/meschain-sync.min.css CursorDev/css/*.css",
    "serve": "http-server -p 3000 -o",
    "lint": "eslint CursorDev/MARKETPLACE_UIS/*.js",
    "validate": "html-validate CursorDev/dist/html/*.html"
  },
  "keywords": [
    "opencart",
    "marketplace",
    "e-commerce",
    "trendyol",
    "n11",
    "hepsiburada",
    "amazon",
    "ebay",
    "ozon",
    "integration",
    "turkish-marketplace",
    "meschain",
    "sync"
  ],
  "author": "MesChain Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meschain/meschain-sync.git"
  },
  "bugs": {
    "url": "https://github.com/meschain/meschain-sync/issues"
  },
  "homepage": "https://meschain.com",
  "dependencies": {
    "axios": "^1.9.0",
    "bootstrap": "^5.3.0",
    "chart.js": "^4.4.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jquery": "^3.7.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "html-validate": "^8.7.0",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "prettier": "^3.1.0",
    "terser": "^5.24.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "ie >= 11"
  ],
  "config": {
    "port": 3000,
    "host": "localhost"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
