          { key: 'overview', label: 'Genel Bakƒ±≈ü', icon: 'üìä' },
          { key: 'users', label: 'Kullanƒ±cƒ±lar', icon: 'üë•' },
          { key: 'security', label: 'G√ºvenlik', icon: 'üîê' },
          { key: 'marketplaces', label: 'Pazaryerleri', icon: 'üè™' },
          { key: 'logs', label: 'Loglar', icon: 'üìã' },
          { key: 'settings', label: 'Ayarlar', icon: '‚öôÔ∏è' }
        ].map(tab => (
          <MS365Button
            key={tab.key}
            variant={activeTab === tab.key ? 'primary' : 'ghost'}
            leftIcon={tab.icon}
            onClick={() => setActiveTab(tab.key as any)}
          >
            {tab.label}
          </MS365Button>
        ))}
      </div>

      {/* Content */}
      <div style={contentStyle}>
        {activeTab === 'overview' && renderOverview()}
        {activeTab === 'users' && renderUsers()}
        {activeTab === 'security' && renderSecurity()}
        {activeTab === 'marketplaces' && renderMarketplaces()}
        {activeTab === 'settings' && renderSettings()}
      </div>
    </div>
  );
};

export default MS365SuperAdminPanel; 