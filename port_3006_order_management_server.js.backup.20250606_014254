// API endpoints for order management
app.get('/api/orders', (req, res) => {
    res.json({
        status: 'success',
        total_orders: 1247,
        pending: 89,
        processing: 156,
        shipped: 267,
        delivered: 735,
        orders: [
            { id: 'ORD-001247', product: 'Smartphone X1', marketplace: 'Trendyol', status: 'processing', total: 999.99 },
            { id: 'ORD-001246', product: 'Laptop Pro 15', marketplace: 'Amazon', status: 'shipped', total: 1299.99 },
            { id: 'ORD-001245', product: 'Wireless Headphones', marketplace: 'Hepsiburada', status: 'delivered', total: 199.99 }
        ]
    });
});

app.get('/api/orders/:orderId', (req, res) => {
    const orderId = req.params.orderId;
    res.json({
        status: 'success',
        order: {
            id: orderId,
            customer: 'John Doe',
            product: 'Smartphone X1',
            marketplace: 'Trendyol',
            status: 'processing',
            total: 999.99,
            tracking_number: 'TRK123456789',
            estimated_delivery: '2025-01-15'
        }
    });
});

// Health check endpoint
app.get('/health', (req, res) => {
    res.json({
        service: 'Order Management System',
        port: PORT,
        status: 'healthy',
        timestamp: new Date().toISOString(),
        authentication: 'pending_integration'
    });
});

// Start server
app.listen(PORT, () => {
    console.log('üöÄ Order Management System Server Started');
    console.log(`üìç URL: http://localhost:${PORT}`);
    console.log(`üìã Service: Multi-Marketplace Order Processing`);
    console.log(`üîê Status: Ready for Priority 3 authentication integration`);
    console.log('‚îÅ'.repeat(60));
});

// Graceful shutdown
process.on('SIGINT', () => {
    console.log('\\nüõë Order Management System shutting down...');
    process.exit(0);
});
