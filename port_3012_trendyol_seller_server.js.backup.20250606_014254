// API endpoints for Trendyol integration
app.get('/api/trendyol/stats', (req, res) => {
    res.json({
        status: 'success',
        marketplace: 'Trendyol',
        active_products: 1247,
        monthly_revenue: 78500,
        seller_score: 4.8,
        orders_today: 234,
        avg_commission: 15.2,
        commission_breakdown: {
            electronics: 12.5,
            clothing: 18.0,
            home_living: 14.5,
            beauty: 16.0
        }
    });
});

// Health check endpoint
app.get('/health', (req, res) => {
    res.json({
        service: 'Trendyol Seller Hub',
        port: PORT,
        status: 'healthy',
        timestamp: new Date().toISOString(),
        authentication: 'pending_integration'
    });
});

// Start server
app.listen(PORT, () => {
    console.log('üöÄ Trendyol Seller Hub Server Started');
    console.log(`üìç URL: http://localhost:${PORT}`);
    console.log(`üõí Service: Trendyol Integration Center`);
    console.log(`üîê Status: Ready for Priority 3 authentication integration`);
    console.log('‚îÅ'.repeat(60));
});

// Graceful shutdown
process.on('SIGINT', () => {
    console.log('\\nüõë Trendyol Seller Hub shutting down...');
    process.exit(0);
});
